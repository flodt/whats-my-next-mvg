<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="match_parent"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:background="@color/background"
                                                   android:layout_height="wrap_content">


    <View
            android:id="@+id/stop_bar"
            android:layout_width="10dp"
            android:layout_height="25dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="65dp"
            android:background="@color/mvg_1"
    />

    <View
            android:id="@+id/stop_square"
            android:layout_width="10dp"
            android:layout_height="8dp"
            app:layout_constraintTop_toTopOf="@id/stop_bar"
            app:layout_constraintLeft_toRightOf="@id/stop_bar"
            app:layout_constraintBottom_toBottomOf="@id/stop_bar"
            android:background="@color/mvg_1"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stop_line_info"
            app:layout_constraintLeft_toRightOf="@id/stop_bar"
            app:layout_constraintTop_toTopOf="@id/stop_bar"
            app:layout_constraintBottom_toBottomOf="@id/stop_bar"
            android:layout_marginStart="40dp"
            android:text="Rosenheimer Platz (18:30)"
            android:textSize="14sp"
            android:textColor="@color/textColorFull"
    />
</androidx.constraintlayout.widget.ConstraintLayout>